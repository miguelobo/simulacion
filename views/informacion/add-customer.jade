extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Blank Page
			small AGREGAR INFORMACION DEL SISTEMA MANUALMENTE
		ol.breadcrumb 
			li 
				a(href='#') 
					i.fa.fa-dashboard
					| Level 
			li.active Here 
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Customer
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
					
			.box-body
				form(role='form',method='post' action='/informacion/add')
					.row
						
						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| Ã—
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								.form-group
									label
										| Nombre
									input(type='text',value='#{nombre}',name='nombre',placeholder='Enter nombre', autofocus).form-control
								.form-group
									label
										| IP
									input(type='text',name='ip',placeholder='Enter ip').form-control
								.form-group
									label
										| Sistema Operativo
									input(type='text',name='so',placeholder='Enter so').form-control
								.form-group
									label
										| RAM
									input(type='text',name='ram',placeholder='Enter Ram').form-control
								.form-group
									label
										| Procesador
									input(type='text',name='procesador',placeholder='Enter Procesador').form-control
								.box-footer
								button(type='submit').btn.btn-primary
									| Submit
								a(href='/informacion').btn.btn-primary.pull-right
									| Back